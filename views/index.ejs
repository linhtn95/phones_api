<!DOCTYPE html>
<html lang="en">

<head>
    <% include partials/head %>
</head>

<body>
    <!-- Navigation -->
    <% include partials/header %>
    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading -->
        <h1 class="my-4">
            <small></small>
        </h1>

        <% if (messages.success) { %>
            <div class="alert alert-success alert-dismissible fade show">
                <strong><%= messages.success %></strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        <% } %>
        <div class="row">
            <% phones.forEach(function(phone){ %>
                <div class="col-md-7">
                    <a href="#">
                        <img class="img-fluid rounded mb-3 mb-md-0" src="<%= phone.img[0] %>" alt="phone image"style="width: 350px; height: 350px;" >
                    </a>
                </div>
                <div class="col-md-5">
                    <h3>
                        <%= phone.brand%>
                            <%= phone.name%>
                    </h3>
                    <h6>Price
                        <span class="badge badge-danger">$
                            <%= phone.price%>
                        </span>
                    </h6>
                    <div>
                        <a class="btn btn-primary" href="/phone/<%= phone._id %>">See Detail</a>
                        <a class="btn btn-success " href="/edit/<%= phone._id %>">Edit</a>
                        <form action="<%= phone._id %>" , method="POST" style="display: inline;">
                            <input class="btn btn-danger" type="submit" name="delete" value='Delete' onClick="return confirm('Are you sure you want to delete?')"
                            />
                            <input class="btn btn-danger" type="hidden" name="_method" value="Delete" />
                        </form>
                    </div>
                </div>
                <% }); %>
        </div>
        <!-- /.row -->
        <hr />
    </div>
    <!-- /.container -->
    <% include partials/footer %>
    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

</body>

</html>