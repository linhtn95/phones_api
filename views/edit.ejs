<!DOCTYPE html>
<html lang="en">

<head>
    <% include partials/head %>
</head>

<body>
    <!-- Navigation -->
    <% include partials/header %>

    <div class="container">
        <% if (messages.error) { %>
            <div class="alert alert-danger alert-dismissible fade show">
                <strong><%= messages.error %></strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        <% } %>
        <form action="/edit/<%= phone._id%>", method="POST">
            <div class="form-group">
                <label for="name">Phone Name</label>
                <input type="text" class="form-control" name="name" id="name" placeholder="Enter phone name" value="<%= phone.name%>">
            </div>
            <div class="form-group">
                <label for="brand">Brand</label>
                <select class="form-control" id="brand" name="brand">
                    <option selected><%= phone.brand%></option>
                    <option>Apple</option>
                    <option>Samsung</option>
                    <option>Sony</option>
                    <option>LG</option>
                    <option>Other</option>
                </select>
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input type="number" class="form-control" name="price" id="price" min="1" value="<%= phone.price%>">
            </div>
            <!-- <div class="form-group">
                <label for="img">URL Images</label>
                <textarea type="text" class="form-control" name="img" id="img" rows="10"><%= phone.img%></textarea>
            </div> -->
            <div class="form-group">
                <% phone.img.forEach(function(el){ %>
                    <img src="http://localhost:3000/<%= el%>" style="width:150px; height: 150px;">
                <% }); %>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>    
        </form>
    </div>

    <!-- /.container -->
    <% include partials/footer %>
    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

</body>

</html>